<!-- mensaje.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mensaje</title>
  <!-- Cargar Bootstrap desde una CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Personalización del fondo para los mensajes */
    .alert-exito {
      background-color: #28a745; /* Verde para éxito */
      color: white;
    }
    .alert-error {
      background-color: #dc3545; /* Rojo para error */
      color: white;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <% if (tipo === 'exito') { %>
      <div class="alert alert-exito">
        <strong>¡Éxito!</strong> <%= mensaje %>
      </div>
    <% } else if (tipo === 'error') { %>
      <div class="alert alert-error">
        <strong>¡Error!</strong> <%= mensaje %>
      </div>
    <% } %>
    <a href="/obras" class="btn btn-primary">Volver a la lista de obras</a>
  </div>
  <!-- Cargar scripts de Bootstrap desde una CDN -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
