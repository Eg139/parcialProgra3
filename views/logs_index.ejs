<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Logs</title>
  <!-- Agregar estilos de Bootstrap o tus estilos preferidos -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="my-4">Listado de Logs</h1>

    <!-- Tabla de Logs -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Ruta</th>
          <th scope="col">Método</th>
          <th scope="col">Fecha de Creación</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach((log, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= log.ruta %></td>
            <td><%= log.metodo %></td>
            <td><%= log.creadoEn.toLocaleString() %></td> <!-- Asumiendo que tienes un campo `createdAt` en tu modelo -->
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Scripts de Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
